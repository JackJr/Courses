<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
    
        {% block stylesheets %}
            {% stylesheets 'bundles/app/stylesheets/*' filter='cssrewrite' output='css' %}
                <link rel="stylesheet" href="{{ asset_url }}" />
            {% endstylesheets %}
        {% endblock %}

        <script src="{{ asset('bundles/app/js/vendor/modernizr.custom.94715.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/app/js/prefixfree.js') }}" type="text/javascript"></script>

    </head>
    <body>

    {% block body %} }{% endblock %}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.10.1.min.js"><\/script>')</script>
    
    <script>
    options = $('.row.option');
    options.click(function(){
        options.removeClass('active');
        $(this).addClass('active');

        $('.submit').addClass('open');
    });

    $('.goTo').click(function(){
        type = $(this).attr('data-type');
        id = $(this).attr('data-to');

        $('.container').removeClass('show');
        
        setTimeout(function(){
          window.location.replace(type + '/' + id + '/1');
        }, 1500);

    });

    $(window).load(function(){
        $('.container').addClass('show');
    });
    </script>

    </body>
</html>
